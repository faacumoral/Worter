@page "/login"
@layout EmptyLayout



<div class="content row d-flex justify-content-center" style="text-align: center;">
    <div class="col-12">
        <div class="row form-row">
            <div class="col-12">
                <h1>Welcome</h1>
            </div>
        </div>
        <div class="row form-row">
            <div class="col-12">
                <input placeholder="username" class="form-control" @bind="username" />
            </div>
        </div>
        <div class="row form-row">
            <div class="col-12">
                <input placeholder="password" type="password" class="form-control" @bind="password" />
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <button class="btn btn-success" @onclick="DoLogin">Login</button>
            </div>
        </div>
    </div>
</div>



@code {
    private string username { get; set; }
    private string password { get; set; }

    private void DoLogin()
    {
        Console.WriteLine(username);
    }
}
